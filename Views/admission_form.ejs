                                    </select>
                                    <label for="course" class="floating-label">Applying for Course</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-container">
                                    <select id="stream" name="stream" required>
                                        <option value="" selected disabled>Select Stream</option>
                                        <%streams.forEach((s)=>{ %>
                                            <option value="<%=s.Stream_Name%>">
                                                <%=s.Stream_Name%>
                                            </option>
                                            <%}) %>
                                    </select>
                                    <label for="stream" class="floating-label">Stream/Specialization</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
