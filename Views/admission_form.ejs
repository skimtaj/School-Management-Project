            <script>


                document.addEventListener('DOMContentLoaded', function () {
                    const form = document.getElementById('admissionForm');
                    const formSections = document.querySelectorAll('.form-section');
                    const nextButtons = document.querySelectorAll('.next-btn');
                    const prevButtons = document.querySelectorAll('.prev-btn');
                    const progressSteps = document.querySelectorAll('.progress-step');
                    const paymentMethod = document.getElementById('paymentMethod');
                    const qrPaymentDetails = document.getElementById('qrPaymentDetails');
                    const bankPaymentDetails = document.getElementById('bankPaymentDetails');

                    document.querySelectorAll('select').forEach(select => {
                        if (select.value) {
                            select.nextElementSibling.style.transform = 'translateY(-22px) scale(0.85)';
                            select.nextElementSibling.style.color = 'var(--primary-color)';
                        }
                    });

                    document.getElementById('marksheet').addEventListener('change', function () {
                        const container = document.getElementById('marksheetContainer');
                        const fileNameDisplay = document.getElementById('marksheetName');
                        updateFileUploadDisplay(this, container, fileNameDisplay);
                    });

                    document.getElementById('migrationCertificate').addEventListener('change', function () {
                        const container = document.getElementById('migrationContainer');
                        const fileNameDisplay = document.getElementById('migrationCertificateName');
                        updateFileUploadDisplay(this, container, fileNameDisplay);
                    });

                    document.getElementById('profileImage').addEventListener('change', function () {
                        const container = document.getElementById('profileImageContainer');
                        const fileNameDisplay = document.getElementById('profileImageName');
                        updateFileUploadDisplay(this, container, fileNameDisplay);
                    });

                    document.getElementById('raggingAffidavit').addEventListener('change', function () {
                        const container = document.getElementById('raggingContainer');
                        const fileNameDisplay = document.getElementById('raggingAffidavitName');
                        updateFileUploadDisplay(this, container, fileNameDisplay);
                    });

                    document.getElementById('paymentScreenshot').addEventListener('change', function () {
                        const container = document.getElementById('paymentScreenshotContainer');
                        const fileNameDisplay = document.getElementById('paymentScreenshotName');
                        updateFileUploadDisplay(this, container, fileNameDisplay);
                    });

                    document.getElementById('bankScreenshot').addEventListener('change', function () {
                        const container = document.getElementById('bankScreenshotContainer');
                        const fileNameDisplay = document.getElementById('bankScreenshotName');
                        updateFileUploadDisplay(this, container, fileNameDisplay);
                    });

                    function updateFileUploadDisplay(input, container, fileNameDisplay) {
                        if (input.files.length > 0) {
                            container.classList.add('has-file');
                            fileNameDisplay.textContent = input.files[0].name;
                        } else {
                            container.classList.remove('has-file');
                            fileNameDisplay.textContent = '';
                        }
                    }

                    paymentMethod.addEventListener('change', function () {
                        qrPaymentDetails.classList.remove('active');
                        bankPaymentDetails.classList.remove('active');

                        if (this.value === 'qr') {
                            qrPaymentDetails.classList.add('active');
                        } else if (this.value === 'bank') {
                            bankPaymentDetails.classList.add('active');
                        }
                    });



                    nextButtons.forEach(button => {
                        button.addEventListener('click', function () {
                            const currentSection = this.closest('.form-section');
                            const currentSectionId = currentSection.id.replace('section', '');
                            const nextSectionId = this.getAttribute('data-next');


                            currentSection.classList.remove('active');
                            document.getElementById(`section${nextSectionId}`).classList.add('active');

                            updateProgressBar(nextSectionId);
                        });
                    });

                    prevButtons.forEach(button => {
                        button.addEventListener('click', function () {
                            const currentSection = this.closest('.form-section');
                            const prevSectionId = this.getAttribute('data-prev');

                            currentSection.classList.remove('active');
                            document.getElementById(`section${prevSectionId}`).classList.add('active');

                            updateProgressBar(prevSectionId);
                        });
                    });

                    function updateProgressBar(currentStep) {
                        progressSteps.forEach(step => {
                            const stepNumber = step.getAttribute('data-step');
                            step.classList.remove('active', 'completed');

                            if (stepNumber < currentStep) {
                                step.classList.add('completed');
                            } else if (stepNumber == currentStep) {
                                step.classList.add('active');
                            }
                        });
                    }



                });




