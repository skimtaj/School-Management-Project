                                        <option value="" selected disabled>Select semester</option>
                                        <%allSems.forEach((s)=>{ %>
                                            <option value="<%=s.Semester_Name%>">
                                                <%=s.Semester_Name%>
                                            </option>
                                            <%}) %>
                                    </select>
                                    <label for="semester" class="floating-label">Semester</label>
