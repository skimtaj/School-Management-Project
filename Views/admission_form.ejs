                <form id="admissionForm" method="post" enctype="multipart/form-data">
                    <div class="form-section active" id="section1">
                        <h2 class="section-title">Personal Information</h2>

                        <div class="form-row">
                            <div class="form-group">
                                <div class="input-container">
                                    <input type="text" id="fullName" name="Name" placeholder=" " required>
                                    <label for="fullName" class="floating-label">Full Name</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-container">
                                    <input type="date" id="dob" name="DOB" placeholder=" " required>
                                    <label for="dob" class="floating-label">Date of Birth</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>Gender</label>
                                <div class="radio-group">
                                    <div class="radio-option">
                                        <input type="radio" id="male" name="Gender" value="male" required>
                                        <label for="male">Male</label>
                                    </div>
                                    <div class="radio-option">
                                        <input type="radio" id="female" name="Gender" value="female">
                                        <label for="female">Female</label>
                                    </div>
                                    <div class="radio-option">
                                        <input type="radio" id="other" name="Gender" value="other">
                                        <label for="other">Other</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-container">
                                    <select id="religion" name="Religion" required>
                                        <option value="" selected disabled></option>
                                        <option value="hindu">Hindu</option>
                                        <option value="muslim">Muslim</option>
                                        <option value="christian">Christian</option>
                                        <option value="sikh">Sikh</option>
                                        <option value="buddhist">Buddhist</option>
                                        <option value="jain">Jain</option>
                                        <option value="other">Other</option>
                                    </select>
                                    <label for="religion" class="floating-label">Religion</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <div class="input-container">
                                    <select id="category" name="Category" required>
                                        <option value="" selected disabled></option>
                                        <option value="general">General</option>
                                        <option value="obc">OBC</option>
                                        <option value="sc">SC</option>
                                        <option value="st">ST</option>
                                        <option value="other">Other</option>
                                    </select>
                                    <label for="category" class="floating-label">Category</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-container">
                                    <input type="text" id="aadhar" name="adhar_no" placeholder=" " required>
                                    <label for="aadhar" class="floating-label">Aadhar Number</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-footer">
                            <div></div>
                            <button type="button" class="btn btn-primary next-btn" data-next="2">Next</button>
                        </div>
                    </div>

                    <div class="form-section" id="section2">
                        <h2 class="section-title">Contact Information</h2>

                        <div class="form-row">
                            <div class="form-group">
                                <div class="input-container">
                                    <input type="tel" id="mobile" name="Mobile" placeholder=" " required>
                                    <label for="mobile" class="floating-label">Mobile Number</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-container">
                                    <input type="email" id="email" name="Email" placeholder=" " required>
                                    <label for="email" class="floating-label">Email Address</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group form-group-full">
                                <div class="input-container">
                                    <textarea id="permanentAddress" name="permanentAddress" placeholder=" "
                                        required></textarea>
                                    <label for="permanentAddress" class="floating-label">Permanent Address</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-footer">
                            <button type="button" class="btn btn-secondary prev-btn" data-prev="1">Previous</button>
                            <button type="button" class="btn btn-primary next-btn" data-next="3">Next</button>
                        </div>
                    </div>

                    <div class="form-section" id="section3">
                        <h2 class="section-title">Education Details</h2>

                        <div class="form-row">
                            <div class="form-group">
                                <div class="input-container">
                                    <select id="course" name="course" required>
                                        <option value="" selected disabled>Select course</option>
                                        <%allCourse.forEach((c)=>{ %>
