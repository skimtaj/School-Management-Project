<!DOCTYPE html>
<html lang="en">

<%-include('admin_header', {admin : adminSourse})%>

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title>Admin Dashboard | Program Management</title>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
        <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.dataTables.min.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">

        <style>
            @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            }

            :root {
                --primaryColor: #2c3e50;
                --primaryLight: #34495e;
                --primaryLighter: #7f8c8d;
                --primaryDark: #1a252f;
                --secondaryColor: #27ae60;
                --dangerColor: #e74c3c;
                --warningColor: #f39c12;
                --infoColor: #3498db;
                --whiteColor: #FFFFFF;
                --lightGray: #f5f6f7;
                --mediumGray: #ecf0f1;
                --darkGray: #95a5a6;
                --textColor: #2c3e50;
                --borderColor: #bdc3c7;
                --smallBorder: 6px;
                --mediumBorder: 10px;
                --bigBorder: 14px;
                --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
                --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
                --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
                --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
                --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
                --fs13: 0.8125rem;
                --fs14: 0.875rem;
                --fs15: 0.9375rem;
                --fs16: 1rem;
                --fs18: 1.125rem;
                --fs20: 1.25rem;
                --fs24: 1.5rem;
                --fs30: 1.875rem;
                --fs36: 2.25rem;
                --sidebarWidth: 280px;
                --headerHeight: 70px;
            }

            html {
                font-size: 16px;
                scroll-behavior: smooth;
            }

            body {
                position: relative;
                color: var(--textColor);
                background-color: var(--lightGray);
                min-height: 100vh;
                overflow-x: hidden;
                line-height: 1.5;
            }

            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
                line-height: 1.3;
                font-weight: 600;
                color: var(--textColor);
            }

            ul {
                list-style: none;
            }

            a {
                text-decoration: none;
                color: inherit;
            }

            ::-webkit-scrollbar {
                width: 6px;
                height: 6px;
            }

            ::-webkit-scrollbar-track {
                background-color: var(--lightGray);
            }

            ::-webkit-scrollbar-thumb {
                background-color: var(--primaryLight);
                border-radius: 3px;
            }

            .container {
                width: 100%;
                height: 100%;
                position: relative;
                padding: 1.5rem;
            }

            /* Main Content Grid */
            .main {
                display: grid;
                gap: 1.5rem;
                width: 100%;
            }

            .main .box {
                padding: 1.5rem;
                background-color: var(--whiteColor);
                border-radius: var(--mediumBorder);
                box-shadow: var(--shadow);
                transition: all 0.3s ease;
                position: relative;
                overflow: hidden;
                width: 100%;
            }

            .box-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1.5rem;
            }

            .box-title {
                font-size: var(--fs18);
                font-weight: 600;
                color: var(--textColor);
            }

            .box-actions {
                display: flex;
                gap: 0.5rem;
            }

            .box-action-btn {
                width: 32px;
                height: 32px;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: var(--smallBorder);
                background-color: var(--lightGray);
                color: var(--darkGray);
                transition: all 0.2s ease;
                cursor: pointer;
                font-size: var(--fs14);
            }

            .box-action-btn:hover {
                background-color: var(--mediumGray);
                color: var(--textColor);
            }

            /* Stats Boxes */
            .stats-box {
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                justify-content: space-between;
                min-height: 140px;
                padding: 1.5rem;
                border-left: 4px solid var(--primaryColor);
                position: relative;
                overflow: hidden;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                width: 100%;
            }

            .stats-box:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-lg);
            }

            .stats-box::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 80px;
                height: 80px;
                background-color: rgba(0, 0, 0, 0.03);
                border-radius: 50%;
                transform: translate(30%, -30%);
            }

            .stats-box .stats-value {
                font-size: var(--fs30);
                font-weight: 700;
                margin-bottom: 0.25rem;
                color: var(--textColor);
            }

            .stats-box .stats-label {
                text-transform: uppercase;
                font-size: var(--fs13);
                font-weight: 500;
                color: var(--darkGray);
                letter-spacing: 0.5px;
                display: block;
            }

            .stats-box .stats-icon {
                font-size: 2.5rem;
                color: var(--primaryColor);
                opacity: 0.8;
                margin-top: 0.5rem;
                align-self: flex-end;
            }

            .stats-box.trend-up .stats-value {
                color: var(--secondaryColor);
            }

            .stats-box.trend-down .stats-value {
                color: var(--dangerColor);
            }

            .stats-box.secondary {
                border-left-color: var(--secondaryColor);
            }

            .stats-box.secondary .stats-icon {
                color: var(--secondaryColor);
            }

            .stats-box.danger {
                border-left-color: var(--dangerColor);
            }

            .stats-box.danger .stats-icon {
                color: var(--dangerColor);
            }

            .stats-box.warning {
                border-left-color: var(--warningColor);
            }

            .stats-box.warning .stats-icon {
                color: var(--warningColor);
            }

            /* Trend indicator */
            .trend-indicator {
                display: inline-flex;
                align-items: center;
                font-size: var(--fs13);
                font-weight: 500;
                padding: 0.25rem 0.5rem;
                border-radius: var(--smallBorder);
                margin-left: 0.5rem;
            }

            .trend-up {
                background-color: rgba(39, 174, 96, 0.1);
                color: var(--secondaryColor);
            }

            .trend-down {
                background-color: rgba(231, 76, 60, 0.1);
                color: var(--dangerColor);
            }

            .trend-neutral {
                background-color: rgba(149, 165, 166, 0.1);
                color: var(--darkGray);
            }

            /* Data Table Section */
            .data-table-section {
                width: 100%;
                padding: 1.5rem;
                background-color: var(--whiteColor);
                border-radius: var(--mediumBorder);
                box-shadow: var(--shadow);
                overflow: hidden;
            }

            .data-table-section .section-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1rem;
            }

            .data-table-section .section-title {
                font-size: var(--fs18);
                font-weight: 600;
                color: var(--textColor);
            }

            .data-table-section .section-actions {
                display: flex;
                gap: 0.5rem;
            }

            /* Filter Controls */
            .filter-controls {
                display: flex;
                flex-wrap: wrap;
                gap: 1rem;
                margin-bottom: 1.5rem;
                padding: 1rem;
                background-color: var(--lightGray);
                border-radius: var(--smallBorder);
            }

            .filter-group {
                display: flex;
                flex-direction: column;
                min-width: 200px;
                flex-grow: 1;
            }

            .filter-label {
                font-size: var(--fs13);
                font-weight: 500;
                color: var(--darkGray);
                margin-bottom: 0.5rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .filter-select {
                padding: 0.625rem 1rem;
                border: 1px solid var(--borderColor);
                border-radius: var(--smallBorder);
                font-size: var(--fs14);
                color: var(--textColor);
                background-color: var(--whiteColor);
                transition: all 0.2s ease;
                appearance: none;
                background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
                background-repeat: no-repeat;
                background-position: right 0.75rem center;
                background-size: 1rem;
            }

            .filter-select:focus {
                outline: none;
                border-color: var(--primaryLight);
                box-shadow: 0 0 0 3px rgba(52, 73, 94, 0.1);
            }

            .filter-actions {
                display: flex;
                align-items: flex-end;
                gap: 0.5rem;
            }

            .filter-btn {
                padding: 0.625rem 1.25rem;
                border-radius: var(--smallBorder);
                font-size: var(--fs14);
                font-weight: 500;
                cursor: pointer;
                transition: all 0.2s ease;
                border: none;
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
            }

            .filter-btn.apply {
                background-color: var(--primaryColor);
                color: var(--whiteColor);
            }

            .filter-btn.apply:hover {
                background-color: var(--primaryDark);
            }

            .filter-btn.reset {
                background-color: var(--lightGray);
                color: var(--darkGray);
            }

            .filter-btn.reset:hover {
                background-color: var(--mediumGray);
            }

            .table-responsive {
                width: 100%;
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

            .table {
                width: 100%;
                border-collapse: collapse;
                font-size: var(--fs14);
            }

            .table th {
                background-color: var(--primaryColor);
                color: var(--whiteColor);
                padding: 1rem 1.25rem;
                text-align: left;
                font-weight: 500;
                text-transform: uppercase;
                font-size: var(--fs13);
                letter-spacing: 0.5px;
            }

            .table td {
                padding: 1rem 1.25rem;
                border-bottom: 1px solid var(--borderColor);
                vertical-align: middle;
                color: var(--textColor);
            }

            .table tr:nth-child(even) {
                background-color: var(--lightGray);
            }

            .table tr:hover {
                background-color: rgba(52, 73, 94, 0.03);
            }

            .status-badge {
                display: inline-block;
                padding: 0.25rem 0.75rem;
                border-radius: 50px;
                font-size: var(--fs13);
                font-weight: 500;
            }

            .status-active {
                background-color: rgba(39, 174, 96, 0.1);
                color: var(--secondaryColor);
            }

            .status-pending {
                background-color: rgba(243, 156, 18, 0.1);
                color: var(--warningColor);
            }

            .status-inactive {
                background-color: rgba(149, 165, 166, 0.1);
                color: var(--darkGray);
            }

            /* Action buttons */
            .action-btn {
                width: 30px;
                height: 30px;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                border-radius: var(--smallBorder);
                color: var(--darkGray);
                transition: all 0.2s ease;
                cursor: pointer;
                border: none;
                background: transparent;
            }

            .action-btn:hover {
                background-color: var(--lightGray);
                color: var(--textColor);
            }

            .action-btn.edit {
                color: var(--infoColor);
            }

            .action-btn.delete {
                color: var(--dangerColor);
            }

            /* Scroll to top button */
            .scroll-top {
                position: fixed;
                bottom: 2rem;
                right: 2rem;
                width: 48px;
                height: 48px;
                border-radius: 50%;
                background-color: var(--primaryColor);
                color: var(--whiteColor);
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                z-index: 99;
                opacity: 0;
                visibility: hidden;
                transition: all 0.3s ease;
                box-shadow: var(--shadow-md);
                border: none;
                outline: none;
            }

            .scroll-top.active {
                opacity: 1;
                visibility: visible;
            }

            .scroll-top:hover {
                background-color: var(--primaryDark);
                transform: translateY(-3px);
                box-shadow: var(--shadow-lg);
            }

            .scroll-top i {
                font-size: 1.25rem;
            }

            /* DataTables Customization */
            .dataTables_wrapper {
                width: 100%;
            }

            .dataTables_wrapper .dataTables_filter {
                margin-bottom: 1rem;
            }

            .dataTables_wrapper .dataTables_filter input {
                padding: 0.5rem 0.75rem;
                border: 1px solid var(--borderColor);
                border-radius: var(--smallBorder);
                margin-left: 0.5rem;
                font-size: var(--fs14);
                transition: all 0.2s ease;
            }

            .dataTables_wrapper .dataTables_filter input:focus {
                border-color: var(--primaryLight);
                outline: none;
                box-shadow: 0 0 0 3px rgba(52, 73, 94, 0.1);
            }

            .dataTables_wrapper .dataTables_length select {
                padding: 0.375rem 1.75rem 0.375rem 0.75rem;
                border: 1px solid var(--borderColor);
                border-radius: var(--smallBorder);
                font-size: var(--fs14);
            }

            .dataTables_wrapper .dataTables_paginate {
                margin-top: 1.5rem;
                padding-top: 1rem;
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 0.25rem;
                flex-wrap: nowrap;
                border-top: 1px solid var(--borderColor);
                overflow-x: auto;
                white-space: nowrap;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button {
                min-width: 32px;
                height: 32px;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                padding: 0 0.5rem;
                border-radius: var(--smallBorder);
                border: 1px solid var(--borderColor);
                color: var(--textColor);
                font-size: var(--fs14);
                font-weight: 500;
                transition: all 0.2s ease;
                flex-shrink: 0;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                background-color: var(--lightGray);
                border-color: var(--mediumGray);
                color: var(--primaryColor);
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                background-color: var(--primaryColor);
                border-color: var(--primaryColor);
                color: var(--whiteColor);
                font-weight: 600;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
                opacity: 0.5;
                pointer-events: none;
            }

            .dataTables_wrapper .dataTables_info {
                font-size: var(--fs14);
                color: var(--darkGray);
                padding-top: 1rem;
            }

            /* Notification Badge */
            .notification-badge {
                position: absolute;
                top: -5px;
                right: -5px;
                width: 18px;
                height: 18px;
                background-color: var(--dangerColor);
                color: white;
                border-radius: 50%;
                font-size: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: bold;
            }

            /* Tooltip */
            .tooltip-inner {
                font-size: var(--fs13);
                padding: 0.375rem 0.75rem;
                background-color: var(--textColor);
            }

            .bs-tooltip-auto[data-popper-placement^=top] .tooltip-arrow::before,
            .bs-tooltip-top .tooltip-arrow::before {
                border-top-color: var(--textColor);
            }

            /* Responsive Styles */
            @media (min-width: 576px) {
                .container {
                    padding: 1.5rem;
                }

                .stats-box {
                    flex-direction: row;
                    align-items: center;
                }

                .stats-box .stats-icon {
                    margin-top: 0;
                    font-size: 3rem;
                }
            }

            @media (min-width: 768px) {
                .main {
                    grid-template-columns: repeat(2, 1fr);
                    gap: 1.5rem;
                }

                .data-table-section {
                    grid-column: span 2;
                }
            }

            @media (min-width: 992px) {
                .container {
                    padding: 2rem;
                }

                .main {
                    grid-template-columns: repeat(12, 1fr);
                    grid-auto-rows: minmax(150px, auto);
                    gap: 1.5rem;
                }

                .stats-box {
                    grid-column: span 3;
                    grid-row: 1;
                }

                .data-table-section {
                    grid-column: span 12;
                    grid-row: 2;
                }
            }

            @media (min-width: 1200px) {
                .container {
                    max-width: 1400px;
                    margin: 0 auto;
                }
            }

            /* Small screens (below 576px) */
            @media (max-width: 575.98px) {
                html {
                    font-size: 14px;
                }

                .container {
                    padding: 1rem;
                }

                .main {
                    display: flex;
                    flex-direction: column;
                    gap: 1rem;
                }

                .box,
                .data-table-section {
                    width: 100%;
                    margin-left: 0;
                    margin-right: 0;
                    padding: 1rem;
                }

                .stats-box {
                    min-height: 120px;
                    padding: 1rem;
                }

                .stats-box .stats-value {
                    font-size: var(--fs24);
                }

                .stats-box .stats-icon {
                    font-size: 2rem;
                }

                .table th,
                .table td {
                    padding: 0.75rem;
                    font-size: var(--fs13);
                }

                .dataTables_wrapper .dataTables_length,
                .dataTables_wrapper .dataTables_filter {
                    width: 100%;
                    margin-bottom: 0.5rem;
                }

                .dataTables_wrapper .dataTables_filter input {
                    width: 100%;
                    margin-left: 0;
                    margin-top: 0.5rem;
                }

                /* Mobile pagination adjustments */
                .dataTables_wrapper .dataTables_paginate {
                    gap: 0.125rem;
                }

                .dataTables_wrapper .dataTables_paginate .paginate_button {
                    min-width: 28px;
                    height: 28px;
                    font-size: var(--fs13);
                    padding: 0 0.25rem;
                }

                /* Filter controls on mobile */
                .filter-controls {
                    flex-direction: column;
                    gap: 0.75rem;
                }

                .filter-group {
                    min-width: 100%;
                }
            }

            /* Animation Classes */
            .fade-in {
                animation: fadeIn 0.5s ease-in-out;
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(10px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .pulse {
                animation: pulse 2s infinite;
            }

            @keyframes pulse {
                0% {
                    box-shadow: 0 0 0 0 rgba(44, 62, 80, 0.4);
                }

                70% {
                    box-shadow: 0 0 0 10px rgba(44, 62, 80, 0);
                }

                100% {
                    box-shadow: 0 0 0 0 rgba(44, 62, 80, 0);
                }
            }


            .response-container {
                background: #ffffff;
                border: 1px solid #eaeaea;
                border-radius: 6px;
                padding: 20px;
                margin: 10px 0;
            }

            .response-form {
                margin: 0;
            }

            .response-label {
                display: block;
                font-weight: 500;
                color: #333;
                margin-bottom: 10px;
                font-size: 14px;
            }

            .response-textarea {
                width: 100%;
                min-height: 100px;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 4px;
                font-size: 14px;
                color: #333;
                resize: vertical;
                box-sizing: border-box;
            }

            .response-submit {
                background-color: #f0f0f0;
                color: #333;
                border: 1px solid #ddd;
                padding: 8px 16px;
                border-radius: 4px;
                font-size: 14px;
                cursor: pointer;
                transition: all 0.2s ease;
            }

            .response-submit:hover {
                background-color: #e0e0e0;
            }

            .response-submit-container {
                margin-top: 15px;
                text-align: right;
            }
        </style>
    </head>

    <body>
        <div class="container" id="top">
            <main class="content">
                <section class="main">
                    <!-- Stats Boxes -->
                    <div class="box stats-box fade-in" style="animation-delay: 0.1s;">
                        <div class="stats-details">
                            <h4 class="stats-value">
                                <%=totalcandidate%>
                            </h4>
                            <span class="stats-label">Attended Candidates</span>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>

                    <div class="box stats-box secondary fade-in" style="animation-delay: 0.2s;">
                        <div class="stats-details">
                            <h4 class="stats-value">
                                50
                                <span class="stats-label">Total Payment</span>

                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>

                    <div class="box stats-box warning fade-in" style="animation-delay: 0.3s;">
                        <div class="stats-details">
                            <h4 class="stats-value">
                                10
                            </h4>
                            <span class="stats-label">Pending Approval</span>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>

                    <div class="box stats-box danger fade-in" style="animation-delay: 0.4s;">
                        <div class="stats-details">
                            <h4 class="stats-value">
                                50
                            </h4>
                            <span class="stats-label">Rejected Candidates</span>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-times-circle"></i>
                        </div>
                    </div>


                    <script>
                <% if (messages.success) { %>
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: "<%= messages.success %>",
                                confirmButtonColor: '#3085d6'
                            });
                <% } %>
            
                <% if (messages.error) { %>
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: "<%= messages.error %>",
                                confirmButtonColor: '#d33'
                            });
                <% } %>

                    </script>


                    <!-- Data Table Section -->
                    <div class="data-table-section fade-in" style="animation-delay: 0.6s;">
                        <div class="section-header">
                            <h3 class="section-title">Survey Management</h3>
                            <div class="section-actions">
                                <a href="#" class="box-action-btn" title="Add New" style='text-decoration : none'>
                                    <i class="fas fa-plus"></i>
                                </a>

                                <a href="#" class="box-action-btn" title="Export in excel"
                                    style='text-decoration : none'>
                                    <i class="fas fa-file-excel"></i>
                                </a>

                                <a href="#" class="box-action-btn" title="PDF" style='text-decoration : none'>
                                    <i class="fas fa-file-pdf"></i>
                                </a>
                            </div>
                        </div>

                        <!-- Filter Controls -->
                        <div class="filter-controls">
                            <div class="filter-group">
                                <label class="filter-label">Verification Status</label>
                                <select class="filter-select" id="verification">
                                    <option value="">All Types</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Approved">Approved</option>
                                    <option value="Rejected">Rejected</option>

                                </select>


                            </div>
                            <div class="filter-group">
                                <label class="filter-label">Payment Status</label>
                                <select class="filter-select" id="payment">
                                    <option value="">All Types</option>
                                    <option value="Success">Success</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </div>

                            <div class="filter-actions">
                                <button class="filter-btn apply" id="applyButton">
                                    <i class="fas fa-filter"></i> Apply
                                </button>

                            </div>
                        </div>

                        <div class="table-responsive">
                            <table id="programsTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>

                                        <th> Name</th>
                                        <th> Email</th>
                                        <th> Profession</th>


                                        <th> Safety</th>
                                        <th>Reason</th>

                                        <th> Jobs</th>
                                        <th>Reason</th>


                                        <th> Corrcet</th>
                                        <th>Reason</th>

                                        <th> Education</th>
                                        <th>Reason</th>

                                        <th> Trust</th>
                                        <th>Reason</th>

                                        <th>Status </th>


                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% allSurveyData.forEach((survey, index)=>{ %>
                                        <tr>
                                            <td>
                                                <%=index+1%>
                                            </td>

                                            <td>
                                                <%=survey.name%>
                                            </td>

                                            <td>

                                                <%=survey.email%>
                                            </td>

                                            <td>

                                                <%=survey.profession%>
                                            </td>

                                            <td>
                                                <%=survey.ai_safety%>
                                            </td>
                                            <td>
                                                <%=survey.ai_safety_reason%>
                                            </td>



                                            <td>
                                                <%=survey.ai_jobs%>
                                            </td>
                                            <td>
                                                <%=survey.ai_jobs_reason%>
                                            </td>



                                            <td>
                                                <%=survey.ai_correct%>
                                            </td>
                                            <td>
                                                <%=survey.ai_correct_reason%>
                                            </td>



                                            <td>
                                                <%=survey.ai_education%>
                                            </td>
                                            <td>
                                                <%=survey.ai_education_reason%>
                                            </td>



                                            <td>
                                                <%=survey.ai_trust%>
                                            </td>
                                            <td>
                                                <%=survey.ai_trust_reason%>
                                            </td>



                                            <td
                                                style="color : <%= survey.Response_Status.trim() === 'Pending' ? 'Yellow' : 'Green' %>">
                                                <%= survey.Response_Status %>
                                            </td>

                                            <td>
                                                <div class="d-flex gap-1">

                                                    <a href="#" class="btn btn-outline btn-sm" title="Delete"
                                                        onclick="deleteSurvey('<%=survey._id%>')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>


                                                <div class="response-container">
                                                    <form method="post" class="reject-form"
                                                        action="/survey-response/<%=survey._id%>">
                                                        <label class="response-label"> Response
                                                        </label>
                                                        <textarea class="reject-textarea"
                                                            placeholder="Please make a response..."
                                                            name="response"></textarea>
                                                        <div class="response-submit-container">
                                                            <button type="submit" class="response-submit">
                                                                Submit Rejection
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </td>

                                        </tr>

                                        <% }) %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </main>
        </div>



        <!-- Scroll to top button -->
        <button class="scroll-top">
            <i class="fas fa-arrow-up"></i>
        </button>

        <script>
                $(document).ready(function () {
                    // Initialize DataTable with responsive settings
                    $('#programsTable').DataTable({
                        responsive: true,
                        paging: true,
                        searching: true,
                        info: true,
                        autoWidth: false,
                        lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                        dom: '<"top"lf>rt<"bottom"ip>',
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "Search programs...",
                            lengthMenu: "Show _MENU_ entries",
                            info: "Showing _START_ to _END_ of _TOTAL_ entries",
                            infoEmpty: "Showing 0 to 0 of 0 entries",
                            infoFiltered: "(filtered from _MAX_ total entries)",
                            paginate: {
                                first: "First",
                                last: "Last",
                                next: "Next",
                                previous: "Previous"
                            }
                        }
                    });

                    // Show/hide scroll to top button
                    $(window).scroll(function () {
                        if ($(this).scrollTop() > 300) {
                            $('.scroll-top').addClass('active');
                        } else {
                            $('.scroll-top').removeClass('active');
                        }
                    });

                    // Smooth scroll to top
                    $('.scroll-top').click(function () {
                        $('html, body').animate({ scrollTop: 0 }, 300);
                        return false;
                    });

                    // Initialize tooltips
                    $('[data-toggle="tooltip"]').tooltip();
                });

            const deleteSurvey = (id) => {

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to undo this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!",
                    cancelButtonText: "No, cancel"
                }).then((result) => {

                    if (result.isConfirmed) {

                        window.location.href = `/delete-survey/${id}`
                    }
                }
                )
            }


        </script>
    </body>

</html>